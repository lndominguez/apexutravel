'use client'

import { use } from 'react'
import { Card, CardBody, Button, Chip } from '@heroui/react'
import { MapPin, Calendar, Users, Check, X, Plane, Hotel as HotelIcon, Car, ArrowLeft } from 'lucide-react'
import { usePackage } from '@/swr'
import Link from 'next/link'

export default function PackageDetailPage({ params }: { params: Promise<{ id: string }> }) {
  const resolvedParams = use(params)
  const { package: pkg, isLoading } = usePackage(resolvedParams.id)

  if (isLoading) {
    return (
      <div className="min-h-screen flex items-center justify-center">
        <div className="text-center">
          <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-primary mx-auto mb-4"></div>
          <p>Cargando paquete...</p>
        </div>
      </div>
    )
  }

  if (!pkg) {
    return (
      <div className="min-h-screen flex items-center justify-center">
        <div className="text-center">
          <h2 className="text-2xl font-bold mb-4">Paquete no encontrado</h2>
          <Button as={Link} href="/" color="primary">Volver al inicio</Button>
        </div>
      </div>
    )
  }

  return (
    <div className="min-h-screen bg-gray-50">
      {/* Hero */}
      <div className="relative h-96 bg-gradient-to-r from-primary to-secondary">
        <div className="absolute inset-0 bg-cover bg-center opacity-30" style={{ backgroundImage: `url(https://images.unsplash.com/photo-1506929562872-bb421503ef21?w=1200)` }} />
        <div className="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent" />
        
        <div className="relative container mx-auto px-4 h-full flex flex-col justify-end pb-12">
          <Link href="/" className="text-white mb-4 flex items-center gap-2 hover:underline">
            <ArrowLeft size={20} /> Volver
          </Link>
          
          <h1 className="text-5xl font-bold text-white mb-4">{pkg.name}</h1>
          <div className="flex items-center gap-6 text-white/90">
            <div className="flex items-center gap-2">
              <MapPin size={20} />
              <span>{pkg.destination}</span>
            </div>
            <div className="flex items-center gap-2">
              <Calendar size={20} />
              <span>{pkg.duration?.days}D / {pkg.duration?.nights}N</span>
            </div>
          </div>
        </div>
      </div>

      {/* Contenido */}
      <div className="container mx-auto px-4 py-12">
        <div className="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <div className="lg:col-span-2 space-y-8">
            <Card>
              <CardBody className="p-8">
                <h2 className="text-2xl font-bold mb-4">Descripción</h2>
                <p className="text-gray-700">{pkg.description || 'Paquete todo incluido'}</p>
              </CardBody>
            </Card>

            <div className="grid grid-cols-2 gap-6">
              <Card>
                <CardBody className="p-6">
                  <h3 className="text-xl font-bold mb-4 text-success">Incluye</h3>
                  <ul className="space-y-2">
                    {pkg.inclusions?.map((item: string, idx: number) => (
                      <li key={idx} className="flex items-start gap-2">
                        <Check size={18} className="text-success mt-0.5" />
                        <span className="text-sm">{item}</span>
                      </li>
                    ))}
                  </ul>
                </CardBody>
              </Card>

              <Card>
                <CardBody className="p-6">
                  <h3 className="text-xl font-bold mb-4 text-danger">No Incluye</h3>
                  <ul className="space-y-2">
                    {pkg.exclusions?.map((item: string, idx: number) => (
                      <li key={idx} className="flex items-start gap-2">
                        <X size={18} className="text-danger mt-0.5" />
                        <span className="text-sm">{item}</span>
                      </li>
                    ))}
                  </ul>
                </CardBody>
              </Card>
            </div>
          </div>

          <div>
            <Card className="sticky top-4">
              <CardBody className="p-6">
                <div className="text-center mb-6">
                  <div className="flex items-baseline justify-center gap-2">
                    <span className="text-4xl font-bold text-primary">${pkg.pricing?.totalPrice?.toFixed(2)}</span>
                    <span className="text-gray-600">MXN</span>
                  </div>
                  <p className="text-sm text-gray-600 mt-1">por persona</p>
                </div>
                
                <Button color="primary" size="lg" className="w-full font-semibold mb-3">
                  Reservar Ahora
                </Button>
                <Button variant="bordered" size="lg" className="w-full">
                  Solicitar Cotización
                </Button>
              </CardBody>
            </Card>
          </div>
        </div>
      </div>
    </div>
  )
}
